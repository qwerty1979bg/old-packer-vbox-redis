{
  "builders": [
    {
      "name": "redis64",
      "vm_name": "redis64-vbox",
      "boot_command": [
        "<esc><wait>auto priority=critical url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>"
      ],
      "http_directory": "http",
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-9.5.0-amd64-netinst.iso",
      "iso_checksum": "f8446a84356a6bcbf79201cc9f46063f",
      "iso_checksum_type": "md5",
      "headless": "true",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_timeout": "30m",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--vrdeaddress",
          "0.0.0.0"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "inline": ["echo 'packer' | sudo -S apt-get update ; sudo apt-get install -y redis-server"],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": true,
        "output": "{{.BuildName}}.box"
      }
    ]
  ]
}
